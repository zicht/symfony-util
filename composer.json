{
    "name": "zicht/symfony-util",
    "description": "Non-bundle utilities for Symfony",
    "authors": [
        {
            "name": "Gerard van Helden",
            "email": "gerard@zicht.nl"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/symfony": "^2.7",
        "zicht/util": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "zicht-standards/php": "^3"
    },
    "license": "MIT",
    "autoload": {
        "psr-0": {
            "": [
                "src/",
                "tests/"
            ]
        }
    },
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs -s src/Zicht/ --standard=vendor/zicht-standards/php/Zicht --extensions=php"
        ],
        "test": [
            "./vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist"
        ]
    }
}
